library(scimetr)
data(wosdf)
attr <- attributes(wosdf)
str(attr)

# SC	Áreas de investigación	Research areas
nsc <-names(table(wosdf$SC))
# Mathematics
imath <- grepl('Mathematics', wosdf$SC)
table(imath)
wosdf2 <- wosdf[imath, ]
# poner etiquetas variables...
# "EA" "EY" "OA" "HC" "HP" "DA"
wosdf2 <- wosdf2[ , attr$names]
attr(wosdf2, "variable.labels") <- attr$variable.labels
save(wosdf2, file = "wosdf2.RData")

# WC	Categorías de Web of Science	WOS category
nwc <- names(table(wosdf$WC))
# Statistics & Probability
istat <- grepl('Statistics & Probability', wosdf$WC)
table(istat)
table(istat & imath)
table(istat | imath)

imath <- grepl('Mathematics', wosdf$WC)
table(istat & imath)
table(istat | imath)
